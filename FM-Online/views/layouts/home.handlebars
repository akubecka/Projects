{{#if sport}}
    <div>
        <p>{{sport}}</p>
    </div>
{{else}}
    <div>
    <p>Choose a Sport</p>
    <form method="POST" id="myForm" action="/sport/sport">
        <select id="sport" name="sport">
            <option value="soccer">Soccer</option>
            <option value="basketball">Basketball</option>
            <option value="football">Football</option>
            <option value="baseball">Baseball</option>
        </select>
        <input type="submit" value="submit">
    </form>
</div>
{{/if}}

{{#if soccer}}
<div>
    <p>Choose a League</p>
    <form method="POST" id="myForm" action="/sport/soccerLeague">
        <select id="league" name="league">
            <option value="bpl">English Premier League</option>
            <option value="bundes">Bundesliga</option>
            <option value="esp">La Liga</option>
            <option value="mls">MLS</option>
            <option value="create">Create your own</option>
        </select>
        <input type="submit" value="submit">
    </form>
</div>
{{/if}}

